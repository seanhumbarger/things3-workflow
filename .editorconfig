root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,tsx}]
quote_type = single

[*.json]
indent_size = 4
trim_trailing_whitespace = false

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false