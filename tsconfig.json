{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "obsidian": ["node_modules/obsidian/typings"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "typings/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
